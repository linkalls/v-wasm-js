{
  "name": "@potetotown/vitrio",
  "version": "0.1.2",
  "description": "Ultra-minimal reactive UI framework with derive() API",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./jsx-runtime": {
      "import": "./dist/jsx-runtime.js",
      "types": "./dist/jsx-runtime.d.ts"
    },
    "./jsx-dev-runtime": {
      "import": "./dist/jsx-dev-runtime.js",
      "types": "./dist/jsx-dev-runtime.d.ts"
    },
    "./wasm": "./dist/vsignal.wasm"
  },
  "files": [
    "dist",
    "README.md",
    "./dist/vsignal.wasm"
  ],
  "scripts": {
    "dev": "bun run examples/counter/serve.ts",
    "build": "bun build ./src/index.ts ./src/jsx-runtime.ts ./src/jsx-dev-runtime.ts --outdir ./dist --target browser --minify --splitting",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:wasm": "v -prod -gc none -b wasm -d no_bounds_checking -d no_backtrace -d no_stdio -o dist/vsignal.wasm src/vsignal/signal.v && (wasm-opt -all -O4 --strip-debug dist/vsignal.wasm -o dist/vsignal.wasm || echo 'wasm-opt not found, skipping')",
    "prepublishOnly": "bun run build:wasm && bun run build && bun run build:types",
    "prepare": "bun run build:wasm && bun run build && bun run build:types",
    "prepack": "bun ./scripts/ensure-wasm.js",
    "check:wasm": "bun ./scripts/ensure-wasm.js",
    "test:wasm": "bun run scripts/check-wasm.ts"
  },
  "keywords": [
    "reactive",
    "ui",
    "signals",
    "atoms",
    "vitrio",
    "derive",
    "jsx"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "playwright": "^1.57.0",
    "typescript": "^5"
  }
}