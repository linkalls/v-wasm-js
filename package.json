{
  "name": "@potetotown/vitrio",
  "version": "0.0.2",
  "description": "Ultra-minimal reactive UI framework with derive() API",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./jsx-runtime": {
      "import": "./dist/jsx-runtime.mjs",
      "types": "./dist/jsx-runtime.d.mts"
    },
    "./jsx-dev-runtime": {
      "import": "./dist/jsx-dev-runtime.mjs",
      "types": "./dist/jsx-dev-runtime.d.mts"
    },
    "./server": {
      "import": "./dist/server.mjs",
      "types": "./dist/server.d.mts"
    },
    "./wasm": "./dist/vsignal.wasm"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run examples/counter/serve.ts",
    "dev:router": "bun run examples/router-demo/serve.ts",
    "test:unit": "bun test tests/core.spec.ts tests/form.spec.ts tests/router-match.spec.ts",
    "test:e2e": "bunx playwright test",
    "build": "tsdown --config tsdown.config.mjs",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:wasm": "v -prod -gc none -b wasm -d no_bounds_checking -d no_backtrace -d no_stdio -o src/vsignal.wasm src/vsignal/signal.v && (wasm-opt -all -O4 --strip-debug src/vsignal.wasm -o src/vsignal.wasm || echo 'wasm-opt not found, skipping')",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "prepack": "node ./scripts/ensure-wasm.js",
    "check:wasm": "node ./scripts/ensure-wasm.js",
    "test:wasm": "node ./scripts/check-wasm.js",
    "postbuild": "node -e \"const fs=require('fs');fs.mkdirSync('dist',{recursive:true});if(fs.existsSync('src/vsignal.wasm')) fs.copyFileSync('src/vsignal.wasm','dist/vsignal.wasm');\""
  },
  "keywords": [
    "reactive",
    "ui",
    "signals",
    "atoms",
    "vitrio",
    "derive",
    "jsx"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-wasm": "^6.2.2",
    "@types/bun": "latest",
    "@playwright/test": "^1.58.2",
    "playwright": "^1.58.2",
    "tsdown": "^0.20.0-beta.4",
    "typescript": "^5"
  }
}
